@page
@model lab11.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.Id" />

            <div class="form-group mb-2">
                <label asp-for="Article.Name" class="control-label"></label>
                <input asp-for="Article.Name" class="form-control" />
                <span asp-validation-for="Article.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Article.Price" class="control-label"></label>
                <input asp-for="Article.Price" class="form-control" />
                <span asp-validation-for="Article.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Article.ExpirationDate" class="control-label"></label>
                <input asp-for="Article.ExpirationDate" class="form-control" />
                <span asp-validation-for="Article.ExpirationDate" class="text-danger"></span>
            </div>

            @* Zamiast inputa, dajemy tylko podgląd (Zadanie 2: brak zmiany zdjęcia) *@
            <div class="form-group mb-2">
                <label class="control-label">Aktualne zdjęcie (brak możliwości zmiany)</label>
                <br />
                @if (!string.IsNullOrEmpty(Model.Article.ImagePath))
                {
                    <img src="~/upload/@Model.Article.ImagePath" style="width: 100px; border-radius: 5px;" />
                }
                else
                {
                    <span class="text-muted">Brak zdjęcia</span>
                }
            </div>

            <div class="form-group mb-2">
                <label asp-for="Article.CategoryId" class="control-label">Kategoria</label>
                <select asp-for="Article.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Article.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}