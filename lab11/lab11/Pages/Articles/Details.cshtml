@page
@model lab11.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            Zdjęcie
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Article.ImagePath))
            {
                <img src="~/upload/@Model.Article.ImagePath" style="max-width: 300px; border: 1px solid #ddd; padding: 5px; border-radius: 10px;" />
            }
            else
            {
                <img src="~/images/no-image.png" style="max-width: 200px; opacity: 0.5;" />
                <p class="text-muted">Brak zdjęcia w bazie</p>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id" class="btn btn-warning">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>