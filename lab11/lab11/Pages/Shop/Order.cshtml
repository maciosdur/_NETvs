@page
@model lab11.Pages.Shop.OrderModel
@{
    ViewData["Title"] = "Podsumowanie zamówienia";
}

<div class="container">
    <h2>Podsumowanie zamówienia</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Twoje produkty</h4>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Nazwa</th>
                        <th>Ilość</th>
                        <th>Cena</th>
                        <th>Suma</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Summary)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Total.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-active">
                        <td colspan="3"><strong>Razem do zapłaty:</strong></td>
                        <td><strong>@Model.GrandTotal.ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="col-md-6">
            <h4>Dane do wysyłki</h4>
            <form method="post">
                <div class="form-group mb-3">
                    <label>Imię i Nazwisko</label>
                    <input asp-for="FullName" class="form-control" required placeholder="np. Jan Kowalski" />
                </div>

                <div class="form-group mb-3">
                    <label>Adres dostawy</label>
                    <textarea asp-for="Address" class="form-control" rows="3" required placeholder="ul. Sezamkowa 1, 00-000 Miasto"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label>Sposób płatności</label>
                    <select asp-for="PaymentMethod" class="form-control" required>
                        <option value="">-- Wybierz płatność --</option>
                        <option value="Karta kredytowa">Karta kredytowa</option>
                        <option value="Przelew bankowy">Przelew bankowy</option>
                        <option value="BLIK">BLIK</option>
                        <option value="Przy odbiorze">Przy odbiorze</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100">Potwierdź zamówienie</button>
            </form>
            <div class="mt-3">
                <a asp-page="./Cart" class="btn btn-outline-secondary btn-sm">Powrót do koszyka</a>
            </div>
        </div>
    </div>
</div>